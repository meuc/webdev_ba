<div>
  <%= link_to "Add new technique", new_admin_technique_path, class: "btn btn-default right" %>
	<h1>Technique register</h1>
</div>

<!-- TODO only show if there are techinques for this belt -->
<% @belts.each do |belt| %>
  <div class="technique-list">
		<!-- <div> -->
    <h2>
      <%= belt.color.titleize %>
      (<%= belt.degree %>) 
			<span class="right"><i class="fa fa-chevron-up" aria-hidden="true"></i></span>
    </h2>
			
<!-- TODO sort alphabetically -->
		<div class="table-responsive">
		  <table class="table table-striped table-hover">
		    <thead>
		      <tr>
		        <th>Name</th>
		        <th>Description</th>
		        <th>Topic</th>
		        <th></th>
		      </tr>
		    </thead>
		    <tbody>
					<% belt.techniques.each do |technique| %>
		        <tr>
		          <td><%= technique.name.titleize %></td>
		          <td><%= technique.description.titleize %></td>		          
							<td><%= technique.topic.titleize %></td>
		          <td>
		            <button class="btn btn-xs btn-info">Edit</button>
		          </td>
		        </tr>
			    <% end %>
		    </tbody>
		  </table>
		</div>			
		
  </div>
<% end %>
