<h1>Medlemmer</h1>

<% if @users.present? %>
<div class="table-responsive">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Email</th>
        <th>Fornavn</th>
        <th>Efternavn</th>
        <th>Fødselsdato</th>
        <th>Køn</th>
        <th>Bælte</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.email %></td>

          <td><%= user.first_name %></td>
          <td><%= user.last_name %></td>
          <td><%= user.birthdate.to_s(:long) %></td>
          <td>
						<% if user.gender == 1%>
          		Kvinde
						<% else %>
            	Mand
          	<% end %>
					</td>
					<td>
          	<% if user.belts.present? %>
            	<%= user.current_belt.color %>
          	<% else %>
            	Ingen bælte
          	<% end %>
					</td>

          <td>
            <%= button_to "Rediger bælte", admin_user_give_user_next_belt_path(user), method: :patch, class: "btn btn-xs btn-info" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<% else %>
  <p>Der er ingen brugere endnu :(</p>
<% end %>
