<% if @users.present? %>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Belt</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.email %></td>

          <% if user.belts.present? %>
            <td><%= user.current_belt.color %></td>
          <% else %>
            <td>No belts</td>
          <% end %>

          <td>
            <%= button_to "Give next belt", admin_user_give_user_next_belt_path(user), method: :patch %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>There are no users yet :(</p>
<% end %>
