<h1>Members</h1>

<% if @users.present? %>
<div class="table-responsive">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Email</th>
        <th>First name</th>
        <th>Last name</th>
        <th>Birthdate</th>
        <th>Gender</th>
        <th>Belt</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.email %></td>

          <td><%= user.first_name %></td>
          <td><%= user.last_name %></td>
          <td><%= user.birthdate.to_s(:long) %></td>
          <td>
						<% if user.gender == 1%>
          		Female
						<% else %>
            	Male
          	<% end %>
					</td>
					<td>
          	<% if user.belts.present? %>
            	<%= user.current_belt.color %>
          	<% else %>
            	No belts
          	<% end %>
					</td>

          <td>
            <%= button_to "Change belt", admin_user_give_user_next_belt_path(user), method: :patch, class: "btn btn-xs btn-info" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<% else %>
  <p>There are no users yet :(</p>
<% end %>
